#ifdef GL_ES
precision highp float;
#endif

uniform mat4 uModelview;
uniform mat4 uProjection; 
uniform vec3 uIdColor; 

varying vec4 vIdColor; 

#ifdef VERTEX
attribute vec4 aVertex;   

void main(void) {
	gl_Position = uProjection * uModelview * aVertex; 
	vIdColor = uIdColor; 
}
#endif 



#ifdef FRAGMENT 
void main(void) {	
	gl_FragColor = vIdColor; 
}
#endif
